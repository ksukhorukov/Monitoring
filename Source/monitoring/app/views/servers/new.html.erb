<% provide(:title, 'Create server') %>
<h1>New server</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@server) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :api_key %>
      <%= f.text_field :api_key, value: generate_api_key %>

      <%= f.submit "Create server to monitor", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>