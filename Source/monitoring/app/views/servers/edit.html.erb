<% provide(:title, 'Edit server') %>
<h1>Edit server</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Your server id is: <%= @server.id %></h2>
    <%= form_for(@server) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :api_key %>
      <%= f.text_field :api_key, value: @server.api_key %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>