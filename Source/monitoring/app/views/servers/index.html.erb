<% unless @servers.empty? %>
  <table class="table table-striped table-hover">
    <th colspan="2">Servers available</th>
    <% @servers.each do |server| %>
      <tr>
        <td> <%= link_to server.name, edit_server_path(server) %></td>
        <td align="right"><%= link_to "delete", server, method: :delete, data: { confirm: "Are you sure?" } %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h2> Please add some servers to monitor</h2>
<% end %>