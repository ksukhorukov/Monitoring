<div class="header clearfix">
  <h3 class="text-muted">Statistics for "<%= @server.name %>"</h3>
  <hr/>
</div>

<div class="row">
   <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Max Disk usage</h3>
    </div>
    <div class="panel-body">
      <%= @statistics.maximum(:disk_usage) %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Max CPU load</h3>
    </div>
    <div class="panel-body">
      <%= @statistics.maximum(:cpu_usage) %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Max processes running</h3>
    </div>
    <div class="panel-body">
      <%= @statistics.maximum(:process_running) %>
    </div>
  </div>
</div>


<table class="table table-striped table-bordered">
  <th>Date & Time</th>
  <th>Disk usage</th>
  <th>CPU usage</th>
  <th>Number of processes</th>
  <% @statistics.each do |stat| %>
    <tr>
      <td><%= stat.created_at %></td>
      <td><%= stat.disk_usage %></td>
      <td><%= stat.cpu_usage %></td>
      <td><%= stat.process_running %></td>
    </tr>
  <% end %>
</table>
